<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">
	
	<application>
		<resource-bundle>
			<base-name>messages</base-name>
			<var>msgs</var>
		</resource-bundle> 
	</application>

	<managed-bean>
		<managed-bean-name>listadosController</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.BeanTareas</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>settings</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.BeanSettings</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>userController</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.BeanUsers</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>logController</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.BeanLog</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>error</from-outcome>
			<to-view-id>/error.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{listadosController.listado}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/listadoMain.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{listadosController.listadoHoy}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/listadoHoy.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{listadosController.listadoSemana}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/listadoSemana.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{logController.huir}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/log.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>alta</from-outcome>
			<to-view-id>/alta.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>iniciarSession</from-outcome>
			<to-view-id>/log.xhtml</to-view-id>
		</navigation-case> 
		<navigation-case>
			<from-action>#{listadosController.cargarForm}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/crearTareaForm.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{listadosController.cargarForm}</from-action>
			<from-outcome>error</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/log.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{logController.log}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{logController.log}</from-action>
			<from-outcome>error</from-outcome>
			<to-view-id>/log.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/index.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{userController.listado}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/listadoUsers.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>alta</from-outcome>
			<to-view-id>/altaForm.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>log</from-outcome>
			<to-view-id>/log.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/listadoUsers.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{userController.preBaja(vuser)}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/borrarUsuario.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{userController.changeStatus(vuser)}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/listadoUsers.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/borrarUsuario.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{userController.baja}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/listadoUsers.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>listadoUsuarios</from-outcome>
			<to-view-id>/listadoUsers.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/crearTareaForm.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{listadosController.salva}</from-action>
			<from-outcome>inbox</from-outcome>
			<to-view-id>/listadoMain.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{listadosController.salva}</from-action>
			<from-outcome>hoy</from-outcome>
			<to-view-id>/listadoHoy.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{listadosController.salva}</from-action>
			<from-outcome>semana</from-outcome>
			<to-view-id>/listadoSemana.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{listadosController.salva}</from-action>
			<from-outcome>error</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/alta.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{logController.salva}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{logController.salva}</from-action>
			<from-outcome>error</from-outcome>
			<to-view-id>/alta.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/borrarBase.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{logController.borrarBase}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{logController.borrarBase}</from-action>
			<from-outcome>error</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>
